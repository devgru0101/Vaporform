{
  "name": "@vaporform/shared",
  "version": "1.0.0",
  "description": "Shared types and utilities for Vaporform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts"
  },
  "keywords": [
    "vaporform",
    "shared",
    "types",
    "utilities"
  ],
  "author": "Vaporform Team",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "zod": "^3.22.4"
  },
  "files": [
    "dist",
    "src",
    "package.json",
    "README.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}