# Environment Configuration Template
# Copy this file to .env and configure your values

# Application
NODE_ENV=development
PORT=4000

# Security
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
CORS_ORIGIN=http://localhost:3000

# AI Services
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Database
DATABASE_URL=postgresql://vaporform:vaporform@localhost:5432/vaporform
POSTGRES_DB=vaporform
POSTGRES_USER=vaporform
POSTGRES_PASSWORD=vaporform

# Redis
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# File Storage
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/*,application/pdf,text/*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_SECRET=your-session-secret-key-change-this

# Development
DEBUG=vaporform:*
HOT_RELOAD=true

# Production specific (uncomment for production)
# NODE_ENV=production
# DATABASE_SSL=true
# REDIS_TLS=true
# LOG_LEVEL=warn